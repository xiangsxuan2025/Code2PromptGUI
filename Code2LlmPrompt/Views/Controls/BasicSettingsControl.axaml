<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:vm="clr-namespace:Code2LlmPrompt.ViewModels"
			 x:Class="Code2LlmPrompt.Views.Controls.BasicSettingsControl"
			 x:DataType="vm:MainViewModel">
	<Border Classes="section">
		<StackPanel Spacing="8">
			<TextBlock Text="ðŸ“ Basic Settings" Classes="section-title" />

			<StackPanel Spacing="6">
				<TextBlock Text="Path to Analyze" Classes="label" />
				<Grid ColumnDefinitions="*,Auto">
					<TextBox
					Text="{Binding Path}"
					Watermark=". (current directory)"
					Classes="input"
					Height="32"
					/>
					<Button
					Content="ðŸ“"
					Grid.Column="1"
					Margin="5,0,0,0"
					Command="{Binding BrowsePathCommand}"
					Classes="icon-btn"
					Width="35"
					Height="32"
					/>
				</Grid>
			</StackPanel>

			<StackPanel Spacing="6">
				<TextBlock Text="Output File" Classes="label" />
				<Grid ColumnDefinitions="*,Auto">
					<TextBox
					Text="{Binding OutputFileName}"
					Watermark="- (stdout)"
					Classes="input"
					Height="32"
					/>
					<Button
					Content="ðŸ’¾"
					Grid.Column="1"
					Margin="5,0,0,0"
					Command="{Binding BrowseOutputCommand}"
					Classes="icon-btn"
					Width="35"
					Height="32"
					/>
				</Grid>

				<CheckBox Content="Copy to Clipboard" IsChecked="{Binding Clipboard}"
						  Classes="checkbox"/>
			</StackPanel>
		</StackPanel>
	</Border>
</UserControl>
