<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:vm="clr-namespace:Code2LlmPrompt.ViewModels"
			 x:Class="Code2LlmPrompt.Views.Controls.OutputPanelControl"
			 x:DataType="vm:MainViewModel">
	<Grid RowDefinitions="Auto,60,Auto,*">
		<!-- Generate Button -->
		<StackPanel
		Grid.Row="0"
		Orientation="Horizontal"
		Spacing="6"
		Margin="0,0,0,5"
		HorizontalAlignment="Center"
		>
			<Button
			Content="ðŸš€ Generate"
			Command="{Binding GenerateCommand}"
			Classes="primary-btn"
			Width="120"
			Height="28"
			/>
		</StackPanel>

		<!-- Output Text Area (Fixed 2 lines) -->
		<Border Grid.Row="1" Classes="output-border">
			<ScrollViewer VerticalScrollBarVisibility="Auto">
				<TextBox
				Text="{Binding Output}"
				IsReadOnly="True"
				AcceptsReturn="True"
				AcceptsTab="True"
				TextWrapping="Wrap"
				Classes="output-text"
				FontFamily="Consolas, Menlo, Monaco, Courier New"
				FontSize="10"
				Height="60"
				/>
			</ScrollViewer>
		</Border>

		<!-- Result Header with Action Buttons -->
		<Border Grid.Row="2" Background="#1a1a2e" Margin="0,5,0,0" BorderThickness="0,0,0,1" BorderBrush="#333344">
			<Grid Margin="0,3">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				
				<TextBlock
					Text="Result"
					Foreground="#00ff41"
					FontSize="12"
					FontWeight="Bold"
					VerticalAlignment="Center"
				/>
				
				<StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="3">
					<Button
						Content="ðŸ“‹"
						Command="{Binding CopyResultCommand}"
						Classes="icon-btn"
						Width="28"
						Height="24"
						FontSize="10"
						ToolTip.Tip="Copy result to clipboard"
					/>
					<Button
						Content="ðŸ’¾"
						Command="{Binding SaveResultCommand}"
						Classes="icon-btn"
						Width="28"
						Height="24"
						FontSize="10"
						ToolTip.Tip="Save result to file"
					/>
				</StackPanel>
			</Grid>
		</Border>

		<!-- Result Text Area -->
		<Border Grid.Row="3" Classes="output-border" Margin="0,5,0,0">
			<ScrollViewer VerticalScrollBarVisibility="Auto">
				<TextBox
				Text="{Binding ResultContent}"
				IsReadOnly="True"
				AcceptsReturn="True"
				AcceptsTab="True"
				TextWrapping="Wrap"
				Classes="output-text"
				FontFamily="Consolas, Menlo, Monaco, Courier New"
				FontSize="10"
				/>
			</ScrollViewer>
		</Border>
	</Grid>
</UserControl>