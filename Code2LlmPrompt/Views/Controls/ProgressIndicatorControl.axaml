<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Code2LlmPrompt.ViewModels"
             x:Class="Code2LlmPrompt.Views.Controls.ProgressIndicatorControl"
             x:DataType="vm:MainViewModel">
    <Border IsVisible="{Binding IsProcessing}" Margin="0,15,0,0">
        <StackPanel Spacing="10">
            <ProgressBar IsIndeterminate="True" Height="4" Classes="progress-bar" />
            <TextBlock
                Text="Processing..."
                HorizontalAlignment="Center"
                Classes="processing-text"
            />
        </StackPanel>
    </Border>
</UserControl>
